    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const faqToggles = document.querySelectorAll(".faq-toggle");

        // Initialize - ensure all accordions are closed except the first one
        document.querySelectorAll(".faq-content").forEach((content, index) => {
          if (index === 0) {
            // First FAQ is already expanded in the HTML
            content.style.maxHeight = content.scrollHeight + "px";
          } else {
            content.style.maxHeight = "0px";
          }
        });

        faqToggles.forEach((toggle) => {
          toggle.addEventListener("click", function () {
            const content = this.nextElementSibling;
            const icon = this.querySelector("i");

            // Toggle active class on the button
            this.classList.toggle("active");

            // Close all other FAQs
            document.querySelectorAll(".faq-toggle").forEach((otherToggle) => {
              if (otherToggle !== this && otherToggle.classList.contains("active")) {
                otherToggle.classList.remove("active");
                const otherContent = otherToggle.nextElementSibling;
                const otherIcon = otherToggle.querySelector("i");

                otherContent.style.maxHeight = "0px";
                otherIcon.classList.remove("fa-minus");
                otherIcon.classList.add("fa-plus");
                otherIcon.style.transform = "rotate(0deg)";
              }
            });

            // Toggle current FAQ
            if (this.classList.contains("active")) {
              content.style.maxHeight = content.scrollHeight + "px";
              icon.classList.remove("fa-plus");
              icon.classList.add("fa-minus");
              icon.style.transform = "rotate(180deg)";
            } else {
              content.style.maxHeight = "0px";
              icon.classList.remove("fa-minus");
              icon.classList.add("fa-plus");
              icon.style.transform = "rotate(0deg)";
            }
          });
        });
      });
    </script>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const beforeImage = document.getElementById("before-image");
        const afterImage = document.getElementById("after-image");
        const beforeLabel = document.getElementById("before-label");
        const afterLabel = document.getElementById("after-label");

        let showingBefore = true;
        const transitionDuration = 3000; // How long each image shows (3 seconds)
        const fadeTime = 1500; // How long the fade transition takes (1.5 seconds)

        // Function to toggle between before and after images
        function toggleBeforeAfter() {
          if (showingBefore) {
            // Transition to After
            afterImage.style.opacity = "1";
            beforeLabel.style.opacity = "0";
            afterLabel.style.opacity = "1";
          } else {
            // Transition to Before
            afterImage.style.opacity = "0";
            beforeLabel.style.opacity = "1";
            afterLabel.style.opacity = "0";
          }

          showingBefore = !showingBefore;
        }

        // Start the automatic transition loop
        function startAutoTransition() {
          // Initial state
          afterImage.style.opacity = "0";
          beforeLabel.style.opacity = "1";
          afterLabel.style.opacity = "0";

          // Set transition timing in CSS
          beforeImage.style.transitionDuration = `${fadeTime}ms`;
          afterImage.style.transitionDuration = `${fadeTime}ms`;
          beforeLabel.style.transitionDuration = `${fadeTime}ms`;
          afterLabel.style.transitionDuration = `${fadeTime}ms`;

          // Start the loop
          setInterval(toggleBeforeAfter, transitionDuration);
        }

        // Initialize the automatic transition
        startAutoTransition();
      });
    </script>
