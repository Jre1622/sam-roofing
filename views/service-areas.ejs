<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <meta name="description" content="<%= description %>" />

    <!-- Canonical URL -->
    <link rel="canonical" href="<%= canonical %>" />

    <!-- Social Media Meta Tags -->
    <%- include('partials/social-meta') %>

    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png" />
    <link rel="manifest" href="/favicon/site.webmanifest" />

    <!-- CSS -->
    <link rel="stylesheet" href="/css/output.css" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />

    <!-- Structured Data -->
    <%- include('partials/structured-data') %>
  </head>
  <body class="flex flex-col min-h-screen bg-gray-50">
    <!-- Header -->
    <header><%- include('partials/header') %></header>

    <!-- Main Content -->
    <main class="flex-grow">
      <!-- Hero Section -->
      <section class="relative py-12 md:py-16 text-white overflow-hidden">
        <div class="absolute inset-0">
          <img src="/images/service-areas.webp" alt="Minnesota Service Area Map" class="w-full h-full object-cover object-center" />
          <div class="absolute inset-0 bg-black opacity-60"></div>
        </div>
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
          <div class="text-center max-w-3xl mx-auto">
            <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4 leading-tight">Areas We Serve</h1>
            <p class="text-lg md:text-xl text-blue-100 mb-6">Providing expert exterior remodeling services throughout the Twin Cities metro area and surrounding communities.</p>
          </div>
        </div>
      </section>

      <!-- Brand Ratings -->
      <%- include('partials/brand-ratings') %>

      <!-- Service Areas Grid Section -->
      <section class="py-12 md:py-16 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-10">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">Communities We Serve</h2>
            <p class="text-lg text-gray-600 max-w-3xl mx-auto">Click on your city below to learn more about our exterior remodeling services in your area.</p>
          </div>

          <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-4 md:gap-6">
            <% serviceAreas.forEach(city => { %>
            <a href="/service-areas/<%= city.slug %>" class="p-4 bg-blue-50 hover:bg-blue-100 rounded-lg text-center transition duration-200 shadow-sm hover:shadow-md">
              <h3 class="text-lg font-semibold text-blue-800"><%= city.name %></h3>
              <p class="text-sm text-gray-600 mt-2">Exterior Services</p>
            </a>
            <% }); %>
          </div>
        </div>
      </section>

      <!-- Services Section -->
      <section class="py-12 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-10">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">Our Exterior Remodeling Services</h2>
            <p class="text-lg text-gray-600 max-w-3xl mx-auto">We provide comprehensive exterior solutions for homes throughout the Twin Cities metro area.</p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <!-- Roofing -->
            <div class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md transition duration-200">
              <img src="/images/roofing.webp" alt="Roofing Services" class="w-full h-48 object-cover" />
              <div class="p-5">
                <h3 class="text-xl font-bold text-gray-900 mb-2">Roofing</h3>
                <p class="text-gray-600 mb-4">Quality roof installation, repair, and replacement services. Protect your property with durable roofing solutions.</p>
                <a href="/roofing" class="text-blue-600 font-semibold hover:text-blue-700">Learn More →</a>
              </div>
            </div>

            <!-- Siding -->
            <div class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md transition duration-200">
              <img src="/images/siding.webp" alt="Siding Services" class="w-full h-48 object-cover" />
              <div class="p-5">
                <h3 class="text-xl font-bold text-gray-900 mb-2">Siding</h3>
                <p class="text-gray-600 mb-4">Enhance your home's appearance and protection with our premium siding options. Expert installation and lasting results.</p>
                <a href="/siding" class="text-blue-600 font-semibold hover:text-blue-700">Learn More →</a>
              </div>
            </div>

            <!-- Windows -->
            <div class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md transition duration-200">
              <img src="/images/windows.webp" alt="Window Services" class="w-full h-48 object-cover" />
              <div class="p-5">
                <h3 class="text-xl font-bold text-gray-900 mb-2">Windows</h3>
                <p class="text-gray-600 mb-4">Energy-efficient window solutions. Improve comfort, reduce energy costs, and enhance your home's appearance.</p>
                <a href="/windows" class="text-blue-600 font-semibold hover:text-blue-700">Learn More →</a>
              </div>
            </div>

            <!-- Gutters -->
            <div class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md transition duration-200">
              <img src="/images/gutters.webp" alt="Gutter Services" class="w-full h-48 object-cover" />
              <div class="p-5">
                <h3 class="text-xl font-bold text-gray-900 mb-2">Gutters</h3>
                <p class="text-gray-600 mb-4">Protect your home from water damage with our seamless gutter systems. Professional installation and quality materials.</p>
                <a href="/gutters" class="text-blue-600 font-semibold hover:text-blue-700">Learn More →</a>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Contact Call to Action -->
      <section class="py-12 bg-blue-600 text-white">
        <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
          <h2 class="text-2xl md:text-3xl font-bold mb-4">Not sure if we service your area?</h2>
          <p class="text-xl text-blue-100 mb-6">Contact us today to check availability and schedule your free consultation.</p>
          <a href="/contact" class="inline-block px-6 py-3 bg-white text-blue-600 font-bold rounded-full hover:bg-gray-100 transition duration-200"> Contact Us Today </a>
        </div>
      </section>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-8 mt-10"><%- include('partials/footer') %></footer>

    <!-- JavaScript -->
    <script src="/js/main.js"></script>
    <!-- 100% privacy-first analytics -->
    <script async src="https://scripts.simpleanalyticscdn.com/latest.js"></script>
  </body>
</html>
